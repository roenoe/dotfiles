# Read `man 5 sway` for a complete reference.

### Variables
include ~/.config/sway/config.d/variables.conf

### Options
focus_follows_mouse no
#smart_gaps on
#smart_borders on
#mouse_warping container

### Input configuration

input type:touchpad {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

bindgesture {
  swipe:right workspace prev
  swipe:left workspace next
}

input * {
  xkb_layout "no"
  repeat_rate 50
  repeat_delay 300
}

### Theme:

set $background #181616
set $foreground #ebdbb2
set $red #cc241d
set $green #b8bb26
set $yellow #fabd2f
set $blue #83a598
set $magenta #d3869b
set $cyan #8ec07c
set $white #ebdbb2
set $orange #d65d0e
set $gray #928374

### Mouse theme
seat * xcursor_theme Bibata-Original-Ice 32

default_border pixel 3
default_floating_border pixel 3

#client.status $border $background $text $indicator $child-border
#client.focused $blue $background $foreground $cyan $blue
client.focused $orange $background $foreground $orange $orange
client.focused_inactive $gray $background $foreground $gray $gray
client.urgent $red $background $foreground $red $red

# Include other configs in the config.d directory
include /etc/sway/config.d/*
include ~/.config/sway/config.d/*.conf
